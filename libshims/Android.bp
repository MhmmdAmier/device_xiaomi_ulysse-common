// libandroid
cc_library_shared {
    name: "libandroid_shim",
    proprietary: true,
    defaults: ["hidl_defaults"],
    srcs: [
        "libandroid_shim.cpp",
    ],
    cflags: [
        "-Werror",
        "-Wextra",
        "-Wall",
    ],
    shared_libs: [
        "libutils",
    ],
}

cc_library_shared {
    name: "libshims_dpmd",
    product_specific: true,
    srcs: [
        "libshims_dpmd.cpp",
    ]
}

cc_library_shared {
    name: "libshim_wfd",
    srcs : [
         "wfd_shim.cpp",
    ],
}

// IMS
cc_library_shared {
    name: "libims-shim",
    shared_libs: [
        "libgui",
        "libutils",
    ],
    srcs: [
        "Surface.cpp"
    ],
    compile_multilib: "64",
    system_ext_specific: true
}
